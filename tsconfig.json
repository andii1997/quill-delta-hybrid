{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"]
}
